# Environment variables for the backend
# Must be located in /backend as file ".env"


# TODO
# Default: 8080
PORT=

# TODO
Unassigned_AVATAR_URL=https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_960_720.png

# TODO
# Default: http://localhost:4200
FRONTEND_URL=

# TODO
# Default: 3
MAX_SAVED_REPORTS=


# Directory, in which the webdrivers are located in / should be downloaded to.
# Default: .../backend/webdriver
WEBDRIVER_DIR=

# Period in which the webdriver updater checks for new drivers.
# Interval given in cron-format: http://www.nncron.ru/help/EN/working/cron-format.htm
# Default: 0 0 1 * * * (daily at 1AM)
WEBDRIVER_EXEC_PERIOD=

# Linux only: file mode of the webdriver executables.
# Default: 0o755
WEBDRIVER_FILE_MODE=


# Time (in minutes) after which the report is deleted.
# Default: 5
REPORT_DELETION_TIME=


# Jira Integration : values used for the encryption of sensible data.
# Choose a strong Secret like for example generated by RandomKeygen.
JIRA_SECRET=
# The salt should be a random string of at least 16 bytes length.
JIRA_SALT=
# Session secret to establish a secure connection and prevent session hijacking (used in /backend/src/server.js):
# see https://www.npmjs.com/package/express-session
SESSION_SECRET=['secretKey', 'oldkey1', 'oldkey2', '...']


# Mail credentials to send password reset mails (used in /backend/src/nodemailer.js):
EMAIL_AUTH=
EMAIL_PW=


# URI provided by your MongoDB (local or cloud) (used in /backend/src/database/mongodatabase.js).
DATABASE_URI=


# GitHub integration. Check out GitHubÂ´s Guide on Autorizing OAuth Apps.
GITHUB_CLIENT_SECRET=
GITHUB_CLIENT_ID=
PASSPORT_GITHUB_LOCAL_PW_FIELD=id



